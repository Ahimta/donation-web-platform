{
  "rules": {
    "users": {
      ".read": true,
      "$uid": {
        ".write": "$uid === auth.uid"
      }
    },
    "foodDonations": {
      ".read": true,
      "$id": {
        ".write": "auth !== null && (newData.child('donorId').val() === auth.uid || data.child('donorId').val() === auth.uid)"
      }
    },
    "otherDonations": {
      ".read": true,
      "$id": {
        ".write": "auth !== null && (newData.child('donorId').val() === auth.uid || data.child('donorId').val() === auth.uid)"
      }
    }
  }
}
